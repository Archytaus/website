<div class="container pad-top">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="one whole box square">
        <a href="<%= post.id %>" class="post-entry">
          <h3>
            <%= post.title %>
          </h3>
          <% if post.tldr %>
            <p class="blurb">
              <%= post.tldr %>
            </p>
          <% end %>
        </a>
      </div>
    </div>
  <% end %>
</div>